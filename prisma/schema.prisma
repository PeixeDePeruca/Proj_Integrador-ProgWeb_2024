generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model user {
  id  Int @id @unique @default(autoincrement())

  name  String?
  email String  @unique
  username  String  @unique
  password  String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  ratings rating[]
  favorites favorite[]
}


model game {
  id  Int @id @unique @default(autoincrement())

  name  String  @unique
  releaseDate String
  imageURL  String?
  videoURL String?
  description String?
  genre String?
  download String?
  imageGame String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  ratings rating[]
  genres genre[]
  downloads download[]
  imageGames imageGame[]
  favorites favorite[]
}

model rating {
  id  Int @id @unique @default(autoincrement())

  value Int
  comment String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  userId Int
  user user @relation(fields: [userId] , references: [id])
  gameId Int
  game game @relation(fields: [gameId] , references: [id])
}

model genre {
  id Int @id @unique @default(autoincrement())

  name String @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  games game[]
}

model download {
  id Int @id @unique @default(autoincrement())

  name String @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  games game[]
}

model imageGame {
  id Int @id @unique @default(autoincrement())

  name String @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  games game[]
}

model favorite {
  id        Int      @id @default(autoincrement())

  userId    Int
  gameId    Int
  user      user     @relation(fields: [userId], references: [id])
  game      game     @relation(fields: [gameId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, gameId]) 
}
